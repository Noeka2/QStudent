<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity"
    android:background="@color/graylight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="378dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qrimage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:src="@drawable/gravatar"/>

            <Button
                android:id="@+id/btnaffiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Afficher Qr-Code"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="normal"/>

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_baseline_account_circle_24"/>
            <TextView
                android:id="@+id/nom_frais"
                android:textStyle="bold"
                android:textColor="@color/smokewhite"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Noella Kafiy"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>



        <LinearLayout
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_baseline_calendar_month_24"/>
            <TextView
                android:id="@+id/annee_ac"
                android:textStyle="bold"
                android:textColor="@color/smokewhite"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="2020-2021"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_baseline_assignment_ind_24"/>
            <TextView
                android:id="@+id/mat"
                android:textStyle="bold"
                android:textColor="@color/smokewhite"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="142554363"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_baseline_account_balance_24"/>
            <TextView
                android:id="@+id/fac"
                android:textColor="@color/smokewhite"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Polytechnique"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_baseline_school_24"/>
            <TextView
                android:id="@+id/prom"
                android:textStyle="bold"
                android:textColor="@color/smokewhite"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Bac 1"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_baseline_school_24"/>
            <TextView
                android:id="@+id/fil"
                android:textStyle="bold"
                android:textColor="@color/smokewhite"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Génie Informatique"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnscans"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="@drawable/buttonstyle"
        android:src="@drawable/ic_baseline_qr_code_scanner_24"
        android:text="Déconnexion" />
</LinearLayout>